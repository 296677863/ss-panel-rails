<div class="cc">
  <%= render 'layouts/flash' %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div>
          <h1 class="auth-panel-header"><img src="/logo.png"/></h1>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <input id="email" class="form-control" placeholder="注册邮箱" name="email" type="email" autofocus>
          </div>
          <div class="form-group">
            <input id="password" class="form-control" placeholder="密码" name="password" type="password">
          </div>
          <div class="checkbox">
            <label>
              <input id='remember' name="remember" type="checkbox" value="Remember Me">Remember Me
            </label>
          </div>
          <a id='register' href='/register'>注册账号</a>
          <a id='passwd-reset' href='/password/reset'>忘记密码</a>
          <a id="submit" class="btn btn-lg btn-info btn-block">登录</a>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function insertError(msg){
  if ($(".error").length==0){
    content = '<p class="error"><i class="fa fa-close"></i>'+msg+'</p>';
    $(content).insertAfter(".form-control:last");
  }else{
    html_content = '<i class="fa fa-close"></i>'+msg;
    $(".error").html(html_content);
  }
}
$(document).ready(function(){
  $("#submit").click(function(e){
    e.preventDefault();
    email = $("#email").val();
    password = $("#password").val();
    $.post("/login", {"email":email, "password":password},function(data){
      if (data["code"]==1){
        window.location.href="/user";
      }
      else {
        insertError(data["msg"]);
      }
    })
  })
})
</script>
