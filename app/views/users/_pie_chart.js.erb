$(function() {

  var data = [{
    label: "已用",
    data: <%= @usage %>,
    color: "#d9534f"
  }, {
    label: "未用",
    data: <%= 100-@usage %>,
    color: "#5cb85c"

  }];

  var plotObj = $.plot($("#flot-pie-chart"), data, {
    series: {
      pie: {
        show: true
      }
    },
    grid: {
      hoverable: true
    },
    tooltip: true,
    tooltipOpts: {
      content: "%p.0%, %s",
      shifts: {
        x: 20,
        y: 0
      },
      defaultTheme: false
    }
  });
});
