<div id="wrapper">
  <%= render 'layouts/nav' %>
  <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">节点管理</h1>
      </div>
    </div>
    <div class="row">
      <%= render 'layouts/flash' %>
      <div class="col-lg-12">
        <p><a class="btn btn-info" href="/nodes/new"><i class="fa fa-plus"></i> 新增</a></p>
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>节点</th>
                <th>加密方式</th>
                <th>描述</th>
                <th>操作</th>
            </thead>
            <tbody>
              <% @nodes.each_with_index do |node,ix| %>
                <tr>
                  <td><%= ix+1 %></td>
                  <td><%= node.name %></td>
                  <td><%= node.method %></td>
                  <td><%= node.info %></td>
                  <td>
                    <a href="/nodes/<%= node.id %>/edit" class='btn btn-info'>编辑</a> 
                    <%= link_to "删除", node_path(node), method: :delete, class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
