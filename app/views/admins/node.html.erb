<div id="wrapper">
  <%= render 'layouts/nav' %>
  <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">流量使用记录</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>节点</th>
                <th>加密方式</th>
                <th>描述</th>
                <th>操作</th>
            </thead>
            <tbody>
              <% @nodes.each_with_index do |node,ix| %>
                <tr>
                  <td><%= ix+1 %></td>
                  <td><%= node.name %></td>
                  <td><%= node.method %></td>
                  <td><%= node.info %></td>
                  <td><a class='btn btn-info'>编辑</a> <a class='btn btn-danger'>删除</a></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
